<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.dev.vk.photo.app" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity">

        </activity>
        <activity android:name="com.vk.sdk.VKOpenAuthActivity"/>
        <activity android:name=".AlbumActivity" android:label="@string/text_label_albums"/>
        <activity android:name=".AlbumPhotoActivity" android:label="@string/text_label_album_photos"/>
        <activity android:name=".FullscreenPhotoActivity"/>
    </application>

</manifest>
